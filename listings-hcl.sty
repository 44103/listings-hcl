  morecomment=[l]{//},
  morecomment=[l]{\#},
  morecomment=[s]{/*}{*/},
  morestring=[b]{"},
  morestring=[b]{'},
  sensitive=true,
  keepspaces=true,
  showstringspaces=false
}

